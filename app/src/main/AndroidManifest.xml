<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rocks.teagantotally.heartofgoldnotifications">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".app.HeyEddieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="org.eclipse.paho.android.service.MqttService"
            android:exported="false" />

        <service
            android:name=".data.services.NotificationService"
            android:exported="false" />

        <service
            android:name=".data.services.MqttService"
            android:exported="false" />

        <service
            android:name=".data.services.EventService"
            android:exported="false" />

        <receiver android:name=".data.services.MqttService$PublishReceiver" />

        <receiver android:name=".data.services.MqttService$RestartReceiver" />
    </application>
</manifest>
